generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  city      String
  address   String
  contactNo String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Food      Food[]

  @@index([email])
}

model Food {
  id           Int        @id @default(autoincrement())
  name         String
  price        Int
  path         String
  description  String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId Int
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  city      String
  address   String
  mobile    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}
